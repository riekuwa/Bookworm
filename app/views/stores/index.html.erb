  <div class="table-format">
  <table class= "table">
    <tr><th>住所</th>
      <td><%= @store.address %></td></tr>
    <tr><th>営業時間</th>
      <td><%= @store.open.strftime('%H:%M') %>〜<%= @store.close.strftime('%H:%M') %></td></tr>
    <tr><th>最寄り駅</th>
      <td><%= @store.station %><br><%= @store.distance %></td></tr>
    <tr><th>電話番号</th>
      <td><%= @store.phone_number %></td></tr>
    <tr><th>サイト</th>
      <td><a href= "<%= @store.siteaddress %>"><%= @store.siteaddress %></a></td></tr>
    <tr><th>取り扱いジャンル</th>
      <td><%= @store.genre %></td></tr>
  </table>
  </div>
